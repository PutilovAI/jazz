.section
    width 100%
    background-position center
    background-repeat: no-repeat
    position relative
    overflow: hidden
    height: 120%
    &:after,&:before
        content: ''
        position: absolute
        height 35%
        width 100%
        left 0
    &:before
        top 0
        background-image: linear-gradient(to bottom, rgba(#000, 0.25), transparent)
    &:after
        bottom 0
        background-image: linear-gradient(to top, rgba(#000, 0.75) 0%, rgba(#000, 0.5) 50%, transparent 100%)
    &_valign-bot
        display flex
        align-items: flex-end
        justify-content: center

    &_1
        height 100%

    &__bg
        width 100%
        height 100%
        background-position center
        background-repeat: no-repeat
        position absolute
        z-index: 0;
        background-size: cover

        for i in (1..6)
            &_{i}
                background-image url('../images/section-'+ i +'.jpg')

    &__content
        padding 180px 0 120px
        position: relative;
        z-index: 1
        &_full-h
            height 100%
        &_flex-center
            flex-center()


    &__title-wrap
        text-align: center
        margin-bottom: 60px

    &__title
        font-size: $fsH2
        font-family: $ff-title
        text-transform: uppercase
        text-shadow: 0px 1px 4px rgba(#000, 0.75)

    &__quote
        position: relative
        margin 0 auto
        max-width: 720px
        padding 40px 80px
        border 1px solid rgba(#fff, 0.5)
        text-align: center
        &:after
            content ''
            position: absolute
            left 10px
            right 10px
            top 10px
            bottom 10px
            border 1px solid rgba(#fff, 0.5)
            z-index: 0

        & ^[0]__title
            margin-bottom: 20px

    &__quote-content
        position: relative
        z-index: 1
        & *:last-child
            margin-bottom: 0


    &__scroll-bot
        position: absolute
        pos-center-w()
        flex-center()
        top -50px
        width 80px
        height 80px
        border-radius 50%
        background-color: #fff
        cursor: pointer
        & .icon
            opacity: 0.7
            transition: all 0.3s
        &:hover
            & .icon
                opacity: 1
        &_below
            top -20px


+below($notebook)
    .section
        &__quote
            padding 35px 50px
+below($laptop-h)
    .section
        &__quote
            max-width: 660px

+below-h($notebook-h)
    .section
        &__title-wrap
            margin-bottom: 30px
        &__content
            padding 100px 0 55px
+below-h($notebook-h - 1)
    +below($mobile - 1)
        .section
            &__title-wrap
                margin-bottom: 20px
+below-h($notebook-h - 1)
    .section
        &__content
            padding 80px 0 30px

+below($laptop)
    .section
        &__quote
            max-width: $container-content

+below($laptop - 1)
    .section
        &__title-wrap
            margin-bottom: 30px

+below($mobile + 2)
    .section
        &__quote
            padding 25px

+below($mobile + 1)
    .section
        &__quote-noimportant
            display none



+below-h($notebook-h - 1)
    .section
        &__quote
            padding 25px
        &__title-wrap
            margin-bottom: 40px

+below-h($mobile-h - 1)
    .section
        &__quote
            max-width: 100%
            padding 25px 35px

+below-h($mobile-h - 2)
    .section
        &__quote-noimportant
            display none


+below-h($mobile)
    .section
        &__title-wrap
            margin-bottom: 20px

.section
    &__content
        &_request
            padding 0

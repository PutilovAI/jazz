.header
    width 100%
    position: fixed;
    z-index: 100;
    background-image linear-gradient(to bottom, rgba(#000, 0.3), transparent)
    &__container
        display flex
        justify-content: space-between
        align-items: center
        min-height: 120px
        width: 100%
        height: 0px // Для IE 11 иначе не воспринимает значение min-height


    &__lang
    &__lang-link
        text-decoration: none
        color: #fff
        text-transform: uppercase



+below($notebook)
    .header
        &__container
            min-height: 70px
+below($laptop-h)
    .header
        &__menu
            position: absolute
            pos-center-w()

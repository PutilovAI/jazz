@keyframes preloader {
    0% {
        transform rotate(0deg)
    }
    100% {
        transform rotate(360deg)
    }
}
.preloader
    background #000
    position: fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index: 999999
    &__percent
        position: absolute;
        pos-center()
        color #fff
        font-size: 30px
        &:after
            content ''
            position: absolute;
            width 100px
            height 100px
            border 1px solid rgba(#fff, .5)
            clip: rect(auto,50px,50px,auto)
            border-radius: 50%
            top 50%
            left 50%
            margin-top -50px
            margin-left -50px
            animation: preloader 0.5s linear infinite
